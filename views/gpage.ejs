<%-include("partials/header")%> <%-include("partials/nav")%>

<div class="container">
  <div class="g-Hero">
    <h1>Welcome to G Page</h1>
  </div>


  <% if(data){ %>
    <h4>Drivers Information</h4>
    <p style="color: white">First Name: <%=data.firstName%></p>
    <p style="color: white">Last Name: <%=data.lastName%></p>
    <p style="color: white">License Number: <%=data.licenseNumber%></p>
    <p style="color: white">Age: <%=data.age%></p>
    <p>Date of Birth: <%=data.dateOfBirth%></p>
    <hr>

  <form action="/gpage" method="post">
      <!-- Include any necessary hidden fields or identifiers for updating -->
      <input type="hidden" name="id" value="<%= data._id %>">
      <div class="mb-3">
        <label for="carMake" class="form-label">Car Make:</label>
      </div>
      <div class="mb-3">
         <input type="text" class="form-control" id="carMake" name="carMake" value="<%= data.carDetails.carMake %>" required>
      </div>

      <div class="mb-3">
         <label for="carModel" class="form-label">Car Model</label>
      </div>
      <div class="mb-3">
         <input type="text" class="form-control" id="carModel" name="carModel" value="<%= data.carDetails.carModel %>" required>
      </div>

      <div class="mb-3">
        <label for="carYear" class="form-label">Car Year</label>
      </div>
      <div class="mb-3">
        <input type="number" class="form-control" id="carYear" name="carYear"  value="<%= data.carDetails.carYear %>" required>
      </div>

       <div class="mb-3">
         <label for="plateNumber" class="form-label">Plate Number</label>
      </div>
      <div class="mb-3">
         <input
        type="number"
        class="form-control"
        id="plateNumber"
        name="plateNumber" value="<%= data.carDetails.plateNumber %>" required>
      </div>

      <button type="submit" class="btn btn-success">Update Data</button>
    </form>

  <% } %>
</div>
<hr>     
</div>
